<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_form_custom" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="bahan"/>
                    <field name="warna"/>
                    <field name="ukuran"/>
                    <field name="tanggal_kadaluarsa"/>
                    <field name="instruksi_perawatan"/>
                    <field name="status_ketersediaan"/>
                    <field name="lokasi_penyimpanan"/>
                    <field name="kondisi_produk"/>
                    <field name="merk"/>
                    <field name="deskripsi_produk"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
